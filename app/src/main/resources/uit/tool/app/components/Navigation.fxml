<!--<?xml version="1.0" encoding="UTF-8"?>-->


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Rectangle2D?>

<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         alignment="TOP_CENTER" prefHeight="720.0" prefWidth="256.0" style="-fx-background-color: #c3d8eb;"
         BorderPane.alignment="TOP_RIGHT" fx:controller="uit.tool.app.components.Navigation">
        <children>
            <Pane prefHeight="97.0" prefWidth="256.0"/>
            <HBox alignment="CENTER">
                <children>
                    <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" fx:id="logo" >
                        <image>
                            <Image url="@/uit/tool/app/assets/logo.png" />
                        </image>
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </ImageView>
                    <Label contentDisplay="CENTER" graphicTextGap="1.0" prefHeight="21.0"
                           prefWidth="60.0" text="GVST" textAlignment="CENTER" textFill="WHITE">
                        <font>
                            <Font name="Arial Bold Italic" size="18.0"/>
                        </font>
                        <opaqueInsets>
                            <Insets/>
                        </opaqueInsets>
                    </Label>
                </children>
            </HBox>
            <StackPane prefHeight="103.0" prefWidth="256.0">
                <children>
                    <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" fx:id="avatar">
                        <image>
                            <Image url="@/uit/tool/app/assets/search.png"/>
                        </image>
                        <clip>
                            <Circle centerX="32" centerY="32" radius="32.0" fx:id="avatarClip"/>
                        </clip>
                        <StackPane.margin>
                            <Insets/>
                        </StackPane.margin>
                    </ImageView>
                </children>
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </StackPane>
            <VBox>
                <children>
                    <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" fx:id="btnGroupNew">
                        <children>
                            <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@/uit/tool/app/assets/contract.png"/>
                                </image>
                                <viewport>
                                    <Rectangle2D/>
                                </viewport>
                            </ImageView>
                            <Button fx:id="btnNew" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity"
                                    mnemonicParsing="false" prefHeight="32.0" prefWidth="128.0"
                                    style="-fx-background-color: none;" text="New" textFill="#1ca7ec">
                                <font>
                                    <Font name="Arial Italic" size="18.0"/>
                                </font>
                            </Button>
                        </children>
                        <VBox.margin>
                            <Insets bottom="10.0" top="10.0"/>
                        </VBox.margin>
                    </HBox>
                    <HBox alignment="CENTER">
                        <children>
                            <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@/uit/tool/app/assets/search.png"/>
                                </image>
                                <viewport>
                                    <Rectangle2D/>
                                </viewport>
                            </ImageView>
                            <Button alignment="CENTER" mnemonicParsing="false" prefHeight="32.0" prefWidth="128.0"
                                    style="-fx-background-color: none;" text="Open" textFill="#1ca7ec">
                                <font>
                                    <Font name="Arial Italic" size="18.0"/>
                                </font>
                            </Button>
                        </children>
                        <VBox.margin>
                            <Insets bottom="10.0" top="10.0"/>
                        </VBox.margin>
                    </HBox>
                    <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0">
                        <children>
                            <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@/uit/tool/app/assets/settings.png"/>
                                </image>
                                <viewport>
                                    <Rectangle2D/>
                                </viewport>
                            </ImageView>
                            <Button alignment="CENTER" mnemonicParsing="false" prefHeight="32.0" prefWidth="128.0"
                                    style="-fx-background-color: none;" text="Settings" textFill="#1ca7ec">
                                <font>
                                    <Font name="Arial Italic" size="18.0"/>
                                </font>
                            </Button>
                        </children>
                        <VBox.margin>
                            <Insets bottom="10.0" top="10.0"/>
                        </VBox.margin>
                    </HBox>
                </children>
            </VBox>
        </children>
</fx:root>

