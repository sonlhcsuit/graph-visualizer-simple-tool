<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TitledPane?>
<?import uit.tool.app.components.menuComponent.AlgorithmButton?>
<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="uit.tool.app.components.menuComponent.Menu" minWidth="128" maxWidth="256" prefWidth="256"
         stylesheets="@/uit/tool/app/stylesheets/Menu.css" >

    <TitledPane text="Graph Information">
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>
            <TextField fx:id="name" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <GridPane.margin>
                    <Insets topRightBottomLeft="10"/>
                </GridPane.margin>
            </TextField>
            <Button text="save" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" styleClass="vl"
                    maxWidth="Infinity" focusTraversable="false">
                <GridPane.margin>
                    <Insets topRightBottomLeft="10"/>
                </GridPane.margin>
            </Button>

            <CheckBox text="Weighted" GridPane.rowIndex="3" GridPane.columnIndex="0">
                <GridPane.margin>
                    <Insets left="10"/>
                </GridPane.margin>
            </CheckBox>

            <CheckBox text="Directed" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets left="10"/>
                </GridPane.margin>
            </CheckBox>

        </GridPane>


    </TitledPane>

    <TitledPane text="Algorithms" GridPane.columnSpan="2" focusTraversable="false">

        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>
            <AlgorithmButton text="Button 1" row="0" col="0" fx:id="sample"/>
            <AlgorithmButton text="Button 1" row="0" col="1"/>
            <AlgorithmButton text="Button 1" row="1" col="0"/>
            <AlgorithmButton text="Button 1" row="1" col="1"/>
            <AlgorithmButton text="Button 1" row="2" col="0"/>
            <AlgorithmButton text="Button 1" row="2" col="1"/>
            <AlgorithmButton text="Button 1" row="3" col="0"/>
            <AlgorithmButton text="Button 1" row="3" col="1"/>
            <AlgorithmButton text="Button 1" row="4" col="0"/>
            <AlgorithmButton text="Button 1" row="4" col="1"/>
        </GridPane>

    </TitledPane>

</fx:root>
